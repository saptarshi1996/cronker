// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  output        = "./generated"
  binaryTargets = ["native", "linux-musl", "debian-openssl-1.1.x", "darwin"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum RequestMethod {
  POST
  GET
}

enum Status {
  SUCCESS
  FAILED
}

model Cron {
  id Int @id @default(autoincrement())

  name String @db.Text

  cronExpression String? @db.VarChar(20)

  requestMethod  RequestMethod @default(GET)
  requestUrl     String        @db.Text
  requestPayload String?       @db.Text

  isActive Boolean? @default(true)

  createdAt DateTime? @default(now())
  updatedAt DateTime?
  deletedAt DateTime?

  cronLog CronLog[]

  @@map("crons")
}

model CronLog {
  id Int @id @default(autoincrement())

  response   String @db.Text
  status     Status

  started   DateTime
  completed DateTime

  cronId Int
  cron   Cron @relation(fields: [cronId], references: [id])

  createdAt DateTime? @default(now())
  updatedAt DateTime?
  deletedAt DateTime?

  @@map("cron_logs")
}
